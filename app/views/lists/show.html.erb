<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1598899134739-24c46f58b8c0?q=80&w=2912&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
  <div class="container">
    <h1><%= @list.name %> 's list of movies</h1>
  </div>
</div>


<div class="container mt-5 pt-5">
  <div class="my-2 d-grid gap-2 d-md-flex justify-content-md-end">
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class:"btn btn-primary" %>
  </div>
  <div class="card-container">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= bookmark.movie.poster_url %>)">
        <div>
          <h4><%= bookmark.movie.title %></h4>
        </div>
        <div>
          <p>
            <i class="fa-solid fa-trash"></i>
              <%= link_to "Delete",
              bookmark_path(bookmark),
              class: "delete-link",
              data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
              %>
          </p>
        </div>
      </div>
    <% end %>
</div>
</div>
