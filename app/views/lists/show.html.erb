<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @list.photo.key.nil? ? "https://res.cloudinary.com/dcequpnjy/image/upload/v1700219036/v9htgpgnpajslhodxgtb.jpg" : cl_image_path(@list.photo.key, height: 300, crop: :fill) %>');">
  <div class="container">
    <h1><%= @list.name %> 's list of movies</h1>
  </div>
</div>


<div class="container mt-5 pt-5 mb-5">
  <div class="my-2 d-grid gap-2 d-md-flex justify-content-md-end">
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class:"btn btn-primary" %>
  </div>
  <div class="card-container">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= bookmark.movie.poster_url %>)">
        <div>
          <h4><%= bookmark.movie.title %></h4>
          <div id="rating">
            <i class="fa-solid fa-star"></i>
            <%= bookmark.movie.rating %>/10
          </div>
        </div>
        <div>
          <p>
              <%= link_to "+",
              bookmark_path(bookmark),
              data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
              class: "card-remove-link"
              %>
          </p>
        </div>
      </div>
    <% end %>
</div>
</div>
